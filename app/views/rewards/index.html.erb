<h1>Listing rewards</h1>

<table>
  <thead>
    <tr>
      <th>Number of goods</th>
      <th>Good</th>
      <th>Sponsorship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.number_of_goods %></td>
        <td><%= reward.good %></td>
        <td><%= reward.sponsorship_id %></td>
        <td><%= link_to 'Show', reward %></td>
        <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_reward_path %>
