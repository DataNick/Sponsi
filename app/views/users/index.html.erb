<div class="container">
<div class="users-index">
<h1 id="athlete-title">Athletes</h1>

<div class="row text-center">
    <% @users.each do |user| %>
      <% if current_user %>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 hero-feature">
                <div class="thumbnail">
                  <%= image_tag user.avatar.url(:large) %>
                    <img src="http://placehold.it/800x500" alt="">
                    <div class="caption">
                        <h3><%= user.first_name%></h3>
                        <p><%= user.last_name %></p>
                        <p>
                            <%= link_to 'Show', user_path(user), class:'btn btn-primary', style: 'color:#FFFFFF;' %>
                            <% if current_user.admin == true %>
                            <%= link_to 'Destroy', user,class:'btn btn-danger', style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' } %>
                            <% end %>
                        </p>
                    </div>
                </div>
            </div>
      <% end %>
  <%end%>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Admin Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if user.admin == false %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin?  %></td>
      <td><%= link_to 'Show', user %></td>
      <% if current_user.id == user.id %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <% end %>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>


