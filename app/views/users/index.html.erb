<div class="container">
<div class="users-index">
<h1 id="athlete-title">Athletes</h1>

<div class="row text-center">
    <% @users.each do |user| %>

      <% if current_user && user.admin == false %>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 hero-feature">
                <div class="thumbnail">
                  <%= image_tag user.avatar.url(:large) %>
                    
                    <div class="caption">
                        <h3><%= user.first_name%></h3>
                        <p><%= user.last_name %></p>
                        <p>
                            <%= link_to 'Show', user_path(user), class:'btn btn-primary', style: 'color:#FFFFFF;' %>
                            <% if current_user.admin == true %>
                            <%= link_to 'Destroy', user,class:'btn btn-danger', style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' } %>
                            <% end %>
                        </p>
                    </div>
                </div>
            </div>
      <% end %>
  <%end%>


</div>

<h1 id="company-title">Companies</h1>



  <div class="row text-center">
      <% @users.each do |user| %>
        <% if current_user && user.admin == true%>
      <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 hero-feature">
                  <div class="thumbnail">
                    <%= image_tag user.avatar.url(:large) %>
                      
                      <div class="caption">
                          <h3><%= user.first_name%></h3>
                          <p><%= user.last_name %></p>
                          <p>
                              <%= link_to 'Show', user_path(user), class:'btn btn-primary', style: 'color:#FFFFFF;' %>
                              <% if current_user.admin == true %>
                              <%= link_to 'Destroy', user,class:'btn btn-danger', style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' } %>
                              <% end %>
                          </p>
                      </div>
                  </div>
              </div>
        <% end %>
    <%end%>


</div>
