<div class="basket">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    
    <%= f.email_field :email, :class => "form-control", :id => "text-comment-name", :placeholder => "Email", autofocus: true %>
  </div>

  <div class="form-group">
    
    <%= f.password_field :password, :class => "form-control", :id => "text-comment-name", :placeholder => "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit class:'btn btn-primary', :value => "Log in" %>
  </div>
<% end %>
</div>
