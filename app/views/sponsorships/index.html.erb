<div class="container">
<h1 class="col-md-6 col-sm-6">Listing sponsorships</h1>
<div class="col-md-4 col-md-offset-2">
<%= form_tag sponsorships_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
</div>
</div>
<br/>
<% if current_user.admin == true %>
  <div class="new_sponsor"><%= link_to 'New Sponsorship', new_sponsorship_path, class: 'btn btn-primary col-md-6 col-md-offset-3 col-xs-12', style: 'color: #ffffff' %></div>
<% end %>


<div class="container">
  <!-- Title -->
  <div class="row">
      <div class="col-lg-12">
          <h3>Pending Applications</h3>
      </div>
  </div>

<hr>
    <div class="row text-center">
    <% @sponsorships.each do |sponsorship| %>
      <% if current_user %>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 hero-feature">
                <div class="thumbnail">
                    <img src="http://placehold.it/800x500" alt="">
                    <div class="caption">
                        <h3><%= sponsorship.sport %></h3>
                        <p><%= sponsorship.description %></p>
                        <p>
                            <%= link_to 'Show', edit_sponsorship_path(sponsorship), class:'btn btn-primary', style: 'color:#FFFFFF;' %>
                            <% if current_user.admin == true %>
                            <%= link_to 'Destroy', sponsorship,class:'btn btn-danger', style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' } %>
                            <% end %>
                        </p>
                    </div>
                </div>
            </div>
      <% end %>
  <%end%>

<br>




</div>

<br>
<% if current_user.admin == true %>
<%= link_to 'New Sponsorship', new_sponsorship_path %>
<% end %>
