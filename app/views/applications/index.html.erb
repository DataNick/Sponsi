


<% if current_user.admin == true && @sponsorship.user_id == current_user.id %>

<div class="container bg-grey">
  <!-- Title -->
  <div class="row">
      <div class="col-lg-12">
          <h3 id="pend-app">Pending Applications</h3>
      </div>
  </div>

  <hr>
  <div class="index-spons">
    <div class="row text-center">
        <% @sponsorship.applications.each do |application| %>
        <% if application.approval == false %>
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 hero-feature">
            <div class="thumbnail">
                <%= image_tag application.user.avatar.url(:large) %>
                <div class="caption">
                    <h3><%= application.name  %></h3>
                    <p><%= application.description %></p>
                    <p>
                        <%= link_to 'View', sponsorship_application_path(application.sponsorship_id, application.id), class:'btn btn-primary', style: 'color:#FFFFFF;' %>
                        <%= link_to 'Reject', sponsorship_application_path(application.sponsorship_id, application.id),class:'btn btn-danger', style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' } %>
                    </p>
                </div>
            </div>
        </div>
        <%else%>
        <h4 class="text-center">No pending applications</h4>
        <% end %>
        <%end%>
    </div>
</div>


<br>

<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3 id="pend-app">Approved Applications</h3>
    </div>
</div>

<hr>
<div class="approved-form">
<div class="row text-center">
    <% @sponsorship.applications.each do |application| %>
    <% if application.approval == true %>
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6  hero-feature">
        <div class="thumbnail">
                <%= image_tag application.user.avatar.url(:large) %>
            <div class="caption">
                <h3><%= application.name  %></h3>
                <p><%= application.description %></p>
                <p>
                    <%= link_to 'View', sponsorship_application_path(application.sponsorship_id, application.id), class:'btn btn-primary',style: 'color:#FFFFFF;' %>
                    <%= link_to 'Reject', sponsorship_application_path(application.sponsorship_id, application.id), class:'btn btn-danger', style: 'color:#FFFFFF;', method: :delete, data: { confirm: 'Are you sure?' }%>
                </p>
            </div>
        </div>
    </div>
    <%else%>
    <h4 class="text-center">No approved applications</h4>
    <% end %>
    <% end %>
    <% end %>
</div>
</div>

